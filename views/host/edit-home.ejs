

<%- include('../partials/head') %>
  <link rel="stylesheet" href="/addHome.css">
</head>
<body>
<%- include('../partials/nav') %>
  
  <main>
    <div class="form-container">
      <div class="form-header">
        <h2><%= editing ? "Edit" : "Register" %> your home in Airbnb</h2>
        <p>Join thousands of hosts on Airbnb</p>
      </div>
      
     <form action="/<%= editing ? "edit-home" : "add-home" %>" method="POST">

        <div class="form-group">
          <label for="houseName">Property Name</label>
          <input type="hidden" name="id"  value="<%= editing ? home._id : '' %>">
          <input 
            type="text" 
            id="houseName" 
            name="houseName" 
            value="<%= editing ? home.houseName : '' %>"
            placeholder="e.g. Cozy Mountain Cabin" 
            required
          >
        </div>
        
        <div class="form-group">
          <label for="number">House Number</label>
          <input 
            type="number" 
            id="number" 
            name="number" 
              value="<%= editing ? home.number : '' %>"
            placeholder="e.g. 123" 
            required
          >
        </div>
        
        <div class="form-group">
          <label for="number">Price Per Night</label>
          <input 
            type="text" 
            id="number" 
            name="price" 
              value="<%= editing ? home.price : '' %>"
            placeholder="â‚¹" 
            required
          >
        </div>
        
        <div class="form-group">
          <label for="number">Location</label>
          <input 
            type="text" 
            id="number" 
            name="location"
              value="<%= editing ? home.location : '' %>" 
            placeholder="Location" 
            required
          >
        </div>

        <div class="form-group">
          <label for="number">Rating Here</label>
          <input 
            type="text" 
            id="number" 
            name="rating" 
              value="<%= editing ? home.rating : '' %>"
            placeholder="Rating" 
            required
          >
        </div>
        
        
        <div class="form-group">
          <label for="number">Photo Link</label>
          <input 
            type="text" 
            id="number" 
            name="imageUrl" 
              value="<%= editing ? home.imageUrl : '' %>"
            placeholder="Photo" 
            required
          >
        </div>
         <div class="form-group">
          <label for="number">Description</label>
          <textarea
            type="text" 
            id="number" 
            name="description" 
            placeholder="Descripe your home" 
            style="padding: 10px;border-radius: 10px; width: 100%; height: 80px;"
            >
            <%= editing ? home.description : '' %>
          </textarea>
        </div>
        
        <button type="submit" class="submit-btn">
          <i class="fas fa-home"></i> <%= editing ? "Update Home" : "Add Home" %>
        </button>
      </form>
      
      <div class="form-footer">
        <p>By submitting, you agree to Airbnb's Terms of Service</p>
      </div>

    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>
