
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/home.css">
</head>
<body>
  <%- include('../partials/nav') %>

  
  <main>
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">You are in HOST HOME page</h1>
       
        
        <div class="registered-homes">
          <h3 class="homes-title">Our Registered Homes</h3>
          <div class="homes-list">
            <% registeredHomes.forEach(home => { %>
              <div class="home-card">
                <div class="home-image" style="background-image: url('<%= home.imageUrl %>');">
                  <div class="rating-badge">
                    <i class="fas fa-star"></i> <%= home.rating %>
                  </div>
                </div>
                <div class="home-content">
                  <h3 style="display: flex; align-items: center;justify-content: space-between;" class="home-title"><%= home.houseName %>  <span style="font-weight: 200; font-size: small;" class="home-id">H.No.:- <%= home.number %></span> </h3>
                  <p class="home-location">
                    <i class="fas fa-map-marker-alt"></i> <%= home.location %>
                  </p>
                  <div class="home-meta">
               
                        <a href="/host/edit-home/<%= home._id %>?editing=true" class="edit-btn">Edit</a>
                        <form action="/delete-home/<%= home._id %>" method="post"> 

                          <button type="submit" class="book-btn">Delete</button>

                        </form>
                        

                   
                      

                    
                    <span class="home-price">â‚¹<%= parseInt(home.price).toLocaleString() %></span>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
        
       
      </div>
    </section>
    
    
  </main>
  
    <%- include('../partials/footer') %>
</body>
</html>
