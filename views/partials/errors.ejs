<% if (errors && errors.length > 0) { %>
  <style>
    .glass-error {
      backdrop-filter: blur(12px);
      background: rgba(255, 0, 0, 0.12);
      border: 1px solid rgba(255, 0, 0, 0.25);
      color: #a00000;
      border-radius: 16px;
      padding: 24px 28px;
      box-shadow: 0 8px 24px rgba(255, 0, 0, 0.2);
      margin-bottom: 30px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      animation: slideFade 0.4s ease;
      transition: all 0.3s ease-in-out;
    }

    .glass-error h4 {
      font-size: 18px;
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 8px;
      color: #8b0000;
    }

    .glass-error i {
      font-size: 20px;
      color: #ff1e1e;
    }

    .glass-error ul {
      padding-left: 22px;
      margin: 0;
    }

    .glass-error li {
      margin-bottom: 8px;
      font-size: 15px;
      line-height: 1.6;
      list-style: none;
      position: relative;
    }

    .glass-error li::before {
      content: "\f054"; /* FontAwesome chevron-right */
      font-family: "Font Awesome 6 Free";
      font-weight: 900;
      position: absolute;
      left: -18px;
      color: #cc0000;
      font-size: 13px;
    }

    @keyframes slideFade {
      0% {
        opacity: 0;
        transform: translateY(-10px) scale(0.98);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }
  </style>

  <div class="glass-error">
    <h4><i class="fas fa-exclamation-circle"></i> Validation Errors</h4>
    <ul>
      <% errors.forEach((error) => { %>
        <li><%= error %></li>
      <% }); %>
    </ul>
  </div>
<% } %>
