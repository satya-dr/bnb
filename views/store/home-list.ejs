
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="home.css">
</head>
<body>
  <%- include('../partials/nav') %>

  
  <main>
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">Find your perfect getaway</h1>
        <h2 class="hero-subtitle">Discover unique homes and experiences</h2>
        
        <div class="registered-homes">
          <h3 class="homes-title">Our Registered Homes</h3>
          <div class="homes-list">
            <% registeredHomes.forEach(home => { %>
              <div class="home-card">
                <div class="home-image" style="background-image: url('<%= home.imageUrl %>'); display: flex;justify-content: space-between;">
                  <div class="fav" style="margin: 5px; opacity: 0.7;"><%- include('../partials/favourite',{home:home}) %></div>
                  <div class="rating-badge">
                    <i class="fas fa-star"></i> <%= home.rating %>
                  </div>
                </div>
                <div class="home-content">
                  <h3 style="display: flex; align-items: center;justify-content: space-between;" class="home-title"><%= home.houseName %>  <span style="font-weight: 200; font-size: small;" class="home-id">H.No.:- <%= home.number %></span> </h3>
                  <p class="home-location">
                    <i class="fas fa-map-marker-alt"></i> <%= home.location %>
                  </p> 
                  <div class="home-meta">
                   
                    <button class="details-btn"><a href="/home-list/<%= home._id %>">Details</a></button>
                          
                          <%- include('../partials/booking',{home:home}) %>
                   

                    
                    <span class="home-price">â‚¹<%= parseInt(home.price).toLocaleString() %></span>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
        
       
      </div>
    </section>
    
    
  </main>
  
    <%- include('../partials/footer') %>
</body>
</html>
